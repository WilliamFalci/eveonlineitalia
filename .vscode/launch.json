{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Nuxt 3 Debug",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceFolder}/node_modules/.bin/nuxt",
        "dev"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true
    }
  ]
}